<nav class="navbar">
  <ul class="navbar-body span-if-nano span-if-xs span-if-sm">
    <li class="navbar-btn"><span class="navbar-btn-link" style="cursor:pointer" onclick="openSideBar('mySidenav')"><strong>☰</strong></span></li>
    <li class="navbar-btn"><%= link_to "home", root_path, :class => "navbar-btn-link" %></li>
    <li class="navbar-btn"><%= link_to "Users", users_path, :class => "navbar-btn-link" %></li>
    <% if logged_in? then %>
      <li class="navbar-btn-r"><%= link_to user_path(current_user), :class => "navbar-btn-link" do %><%= "Logged in as #{current_user.username}" %><% end %></li>
      <li class="navbar-btn"><%= link_to "Logout", logout_path, method: :delete, :class => "navbar-btn-link" %></li>
    <% else %>
      <li class="navbar-btn"><%= link_to "Login", login_path, :class => "navbar-btn-link" %></li>
      <li class="navbar-btn"><%= link_to "Signup", signup_path, :class => "navbar-btn-link" %></li>
    <% end %>
  </ul>
  <ul class="navbar-body span-if-med span-if-lg span-if-xl" id="navbar-body">
    <li class="navbar-btn"><span class="navbar-btn-link" style="cursor:pointer" onclick="openSideBar('mySidenav')"><strong>☰</strong></span></li>
    <li class="navbar-btn"><%= link_to "home", root_path, :class => "navbar-btn-link" %></li>
    <li class="navbar-btn"><%= link_to "Users", users_path, :class => "navbar-btn-link" %></li>
    <% if logged_in? then %>
      <li class="navbar-btn-r"><%= link_to user_path(current_user), :class => "navbar-btn-link-idle" do %><%= "Logged in as #{current_user.username}" %><% end %></li>
      <li class="navbar-btn"><%= link_to "Logout", logout_path, method: :delete, :class => "navbar-btn-link" %></li>
    <% else %>
      <li class="navbar-btn"><%= link_to "Login", login_path, :class => "navbar-btn-link" %></li>
      <li class="navbar-btn"><%= link_to "Signup", signup_path, :class => "navbar-btn-link" %></li>
    <% end %>
  </ul>
</nav>

<div id="mySidenav" class="sidebar">
  <a href="javascript:void(0)" class="sidebar-btn sidebar-closebtn" onclick="closeSideBar('mySidenav')">&times;</a>
  <%= link_to root_path, :class => "sidebar-btn" do %>Home<% end %>
  <%= link_to users_path, :class => "sidebar-btn" do %>Users<% end %>
  <% if logged_in? then %>
    <%= link_to user_path(current_user), :class => "sidebar-btn" do %>Your profile<% end %>
    <%= link_to logout_path, method: :delete, :class => "sidebar-btn" do %>Logout<% end %>
  <% else %>
    <%= link_to login_path, :class => "sidebar-btn" do %>Login<% end %>
    <%= link_to signup_path, :class => "sidebar-btn" do %>Signup<% end %>
  <% end %>
</div>