<br>
<% @universes.each do |universe| %>
	<%= universe.id %>
	<%= universe.name %>
	<%= link_to "View", universe_path(universe), :class=>"btn btn-xs color-success" %>
	<% if universe.users.include?(current_user) then %>
		<%= link_to "Edit", edit_universe_path(universe), :class=>"btn btn-xs color-primary" %>
		<%= link_to "Delete", universe_path(universe), method: :delete, data: {confirm: "Are you sure you want to delete this universe?"}, :class=>"btn btn-xs color-danger" %>
	<% end %>
	<br>
	<br>
<% end %>
<hr>
<% if logged_in? then %>
	<%= link_to "New universe", new_universe_path, :class=>"btn btn-sm color-white" %>
<% end %>