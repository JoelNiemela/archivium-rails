<% if @universe.errors.any? %>
	<% @universe.errors.full_messages.each do |msg| %>
		<% alert "danger" do %>
			<%= msg %>
		<% end %>
	<% end %>
<% end %>

<%= form_for @universe do |f| %>
	<%= f.hidden_field :name %>
	<br>
	Add user <br>
	<%= select :post, :user, User.all.collect { |user| [user.username, user.id] }, {}, :class => "select size-wide" %> <br>
	<br>
	<%= f.submit("Submit", :class => "btn btn-lg size-wide color-primary") %>
<% end%>