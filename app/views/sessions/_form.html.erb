<%= form_for :session, url: login_path do |f| %>
	<%= f.label :email %> <br>
	<%= f.email_field :email, :class=>"input size-wide" %> <br>

	<%= f.label :password %> <br>
	<%= f.password_field :password, :class=>"input size-wide" %> <br>
	<br>
	<%= f.submit "Login", :class => "btn btn-lg size-wide color-primary" %>
<% end%>